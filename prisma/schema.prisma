// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid()) @db.Uuid
  email        String? @unique
  passwordHash String? // Argon2id hash - null for guest users who can be promoted later
  name         String?
  instagram    String?
  createdAt    BigInt // Unix timestamp
  updatedAt    BigInt // Unix timestamp

  ownedAlbums        Album[]
  uploadedPhotos     Photo[]
  albumCollaborators AlbumCollaborator[]

  @@map("users")
}

model Album {
  id          String  @id @default(uuid()) @db.Uuid
  title       String
  description String?
  eventDate   BigInt? // Unix timestamp for when the event occurred
  isPublic    Boolean @default(false)
  createdAt   BigInt // Unix timestamp
  updatedAt   BigInt // Unix timestamp

  ownerId String @db.Uuid
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  photos        Photo[]
  collaborators AlbumCollaborator[]
  shareLinks    ShareLink[]

  @@map("albums")
}

model ShareLink {
  id        String  @id @default(uuid()) @db.Uuid
  token     String  @unique
  type      String  @default("view") // view, upload
  password  String?
  label     String?
  views     Int     @default(0)
  createdAt BigInt // Unix timestamp
  expiresAt BigInt? // Unix timestamp

  albumId String @db.Uuid
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@map("share_links")
}

model Photo {
  id                   String  @id @default(uuid()) @db.Uuid
  filename             String
  originalName         String
  url                  String // Public API URL
  thumbnailUrl         String? // Public API URL
  storagePath          String? // Internal storage path
  thumbnailStoragePath String? // Internal storage path for thumbnail
  blurhash             String? // Blurhash for progressive image loading
  size                 Int
  width                Int
  height               Int
  mimeType             String
  fileHash             String // SHA-256 hash for duplicate detection

  // EXIF data
  cameraModel  String?
  lens         String?
  focalLength  String?
  iso          Int?
  aperture     String?
  shutterSpeed String?
  dateTaken    BigInt? // Unix timestamp

  createdAt BigInt // Unix timestamp
  updatedAt BigInt // Unix timestamp

  albumId String @db.Uuid
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  uploaderId String? @db.Uuid
  uploader   User?   @relation(fields: [uploaderId], references: [id], onDelete: SetNull)

  @@map("photos")
}

model AlbumCollaborator {
  id        String @id @default(uuid()) @db.Uuid
  role      String @default("viewer") // viewer, editor, admin
  createdAt BigInt // Unix timestamp

  albumId String @db.Uuid
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([albumId, userId])
  @@map("album_collaborators")
}
