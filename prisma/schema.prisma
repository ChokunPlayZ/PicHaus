// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid()) @db.Uuid
  email        String? @unique
  passwordHash String? // Argon2id hash - null for guest users who can be promoted later
  name         String?
  instagram    String?
  createdAt    BigInt // Unix timestamp
  updatedAt    BigInt // Unix timestamp
  role         Role    @default(USER)

  ownedAlbums        Album[]
  uploadedPhotos     Photo[]
  albumCollaborators AlbumCollaborator[]
  apiTokens          ApiToken[]
  shareGroups        ShareGroup[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Album {
  id          String  @id @default(uuid()) @db.Uuid
  title       String
  description String?
  eventDate   BigInt? // Unix timestamp for when the event occurred
  isPublic    Boolean @default(false)
  createdAt   BigInt // Unix timestamp
  updatedAt   BigInt // Unix timestamp

  ownerId String @db.Uuid
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  photos        Photo[]
  collaborators AlbumCollaborator[]
  shareLinks    ShareLink[]
  shareGroups   ShareGroup[]

  @@map("albums")
}

model ShareLink {
  id        String  @id @default(uuid()) @db.Uuid
  token     String  @unique
  type      String  @default("view") // view, upload
  password  String?
  label     String?
  views     Int     @default(0)
  createdAt BigInt // Unix timestamp
  expiresAt BigInt? // Unix timestamp

  albumId String? @db.Uuid
  album   Album?  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  shareGroupId String?     @db.Uuid
  shareGroup   ShareGroup? @relation(fields: [shareGroupId], references: [id], onDelete: Cascade)

  @@map("share_links")
}

model ShareGroup {
  id          String  @id @default(uuid()) @db.Uuid
  title       String
  description String?
  createdAt   BigInt // Unix timestamp
  updatedAt   BigInt // Unix timestamp

  ownerId String @db.Uuid
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  albums     Album[]
  shareLinks ShareLink[]

  @@map("share_groups")
}

model ApiToken {
  id          String   @id @default(uuid()) @db.Uuid
  name        String // User-friendly name for the token
  token       String   @unique // The actual token (hashed for security)
  tokenPrefix String // First 8 chars of token for display (e.g., "pk_abc123...")
  scopes      String[] // Allowed scopes: ["photos:read", "albums:read"]
  lastUsedAt  BigInt? // Unix timestamp
  expiresAt   BigInt? // Unix timestamp, null = never expires
  createdAt   BigInt // Unix timestamp

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_tokens")
}

model Photo {
  id                   String @id @default(uuid()) @db.Uuid
  filename             String
  originalName         String
  storagePath          String // Internal storage path
  thumbnailStoragePath String // Internal storage path for thumbnail
  blurhash             String // Blurhash for progressive image loading
  size                 Int
  width                Int
  height               Int
  mimeType             String
  fileHash             String // SHA-256 hash for duplicate detection

  // EXIF data
  cameraModel  String?
  lens         String?
  focalLength  String?
  iso          Int?
  aperture     String?
  shutterSpeed String?
  dateTaken    BigInt? // Unix timestamp

  createdAt BigInt // Unix timestamp
  updatedAt BigInt // Unix timestamp

  albumId String @db.Uuid
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  uploaderId String? @db.Uuid
  uploader   User?   @relation(fields: [uploaderId], references: [id], onDelete: SetNull)

  @@map("photos")
}

model AlbumCollaborator {
  id        String @id @default(uuid()) @db.Uuid
  role      String @default("viewer") // viewer, editor, admin
  createdAt BigInt // Unix timestamp

  albumId String @db.Uuid
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([albumId, userId])
  @@map("album_collaborators")
}
